<p>
  <strong>Title:</strong>
  <%= @article.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @article.text %>
</p>

<p>
  <strong>Category:</strong>
  <%= Category.find(@article.category_id).name %>
</p>

<h2>Comments</h2>
<% if @article.comments.count == 0 %>
	<p>No Comments Found</p>
<% else %>
	<%= render @article.comments %>
<% end %>

<h2>Add a comment:</h2>
<%= render 'comments/form' %>

<%= link_to 'Back', :back %>
<%= link_to 'Home', articles_path %>
<%= link_to 'Edit', edit_article_path %>

